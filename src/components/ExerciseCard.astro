---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card">
    <a href={href} class="w-full flex items-center px-4 py-6 bg-gray-800 bg-gradient-to-r from-gray-900 to-gray-800 rounded-lg shadow-md hover:bg-gradient-to-r hover:from-blue-500 hover:to-blue-400 hover:bg-gray-900 hover:text-blue-50 hover:shadow-lg transition-transform duration-500 transform hover:scale-105">
        <h2 class="text-xl font-semibold text-white">
            {title}
            <span class="ml-2 text-xl">&rarr;</span>
        </h2>
        <p class="mt-2 text-gray-300">
            {body}
        </p>
    </a>
</li>