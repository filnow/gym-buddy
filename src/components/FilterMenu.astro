---
import SideMenuIcon from "./SideMenuIcon.astro";
import CategoryFilter from "./CategoryFilter";

const someProps = {
	count: false,
};
---

<div class="flex flex-col flex-1 gap-2">
  <div class="bg-zinc-900 rounded-lg">
    <ul>
      <SideMenuIcon href="#" iconName="carbon:text-align-justify">Filter</SideMenuIcon>
    </ul>
  </div>

  <div class="bg-zinc-900 rounded-lg flex-1">
    <ul>
        <SideMenuIcon href="#" iconName="carbon:media-library">
            Category
        </SideMenuIcon>
        <div class="ml-5 overflow-hidden">
            <CategoryFilter {...someProps} client:visible></CategoryFilter>
        </div>
    </ul>
  </div>
</div>