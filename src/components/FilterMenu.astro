---

import CategoryFilter from "./CategoryFilter";
import { IconButton } from "@mui/material";
import { PlusIcon, EllipsisHorizontalIcon } from '@heroicons/react/24/solid'


---

<div class="flex flex-col flex-1 gap-2">
  <div class="bg-zinc-900 rounded-lg">
    <ul>
      <IconButton aria-label="Example">
        <PlusIcon className="w-6 h-6" />
      </IconButton>
    </ul>
  </div>

  <div class="bg-zinc-900 rounded-lg flex-1">
    <ul>
        <IconButton aria-label="Example">
          <PlusIcon className="w-6 h-6" />
        </IconButton>
        <div class="ml-5 overflow-hidden">
            <CategoryFilter client:visible></CategoryFilter>
        </div>
    </ul>
  </div>
</div>